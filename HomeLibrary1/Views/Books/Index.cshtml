@model IEnumerable<HomeLibrary1.Models.Book>

@{
    ViewData["Title"] = "Spis książek";
}
<h1>Spis książek</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Utwórz nową</a>
</p>
<table class="table table-striped-columns">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBorrowed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsBorrowed)
            </td>
            <td>
                @{
                    @if(item.IsBorrowed== true){
                         <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Szczegóły</a>
                    }
                    else{
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Szczegóły</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Usuń</a>
                    }
                }
            </td>
        </tr>
}
    </tbody>
</table>
